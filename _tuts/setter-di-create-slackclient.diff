+use Nexy\Slack\Client;
+
+class SlackClient
+{
+    private $slack;
+
+    public function __construct(Client $slack)
+    {
+        $this->slack = $slack;
+    }
+
+    public function sendMessage(string $from, string $message)
+    {
+        $message = $this->slack->createMessage()
+            ->from($from)
+            ->withIcon(':ghost:')
+            ->setText($message);
+        $this->slack->sendMessage($message);
+    }
